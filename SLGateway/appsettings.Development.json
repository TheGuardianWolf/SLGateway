{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./Logs/Log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://*:5000"
            },
            "Https": {
                "Url": "https://*:5001"
            }
        }
    }
}
